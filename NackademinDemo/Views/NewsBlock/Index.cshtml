@model NewsViewModel

@{
    var urlHelper = EPiServer.ServiceLocation.ServiceLocator.Current.GetInstance<UrlHelper>();
    //var friendlyUrl = urlHelper.ContentUrl(currentPage.Link);
}

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model.News)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        @Html.PropertyFor(x => item.Image)
                        @*<svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title></title><rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em"></text></svg>*@
                        <div class="card-body">
                            <p class="card-text">@item.Header</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="@Url.ContentUrl(item.ContentLink)" class="btn btn-sm btn-outline-secondary">Read more</a>
                                </div>
                                <small class="text-muted"></small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>