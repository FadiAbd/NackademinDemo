@model StartPageViewModel

@{ 
    var backgroundColor = Model.CurrentPage.BackgroundColor;
}

<section class="py-5 text-center container @backgroundColor">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">@Html.PropertyFor(x => x.CurrentPage.Header)</h1>
            <p class="lead text-muted">@Html.PropertyFor(x => x.CurrentPage.Preamble)</p>
            <p>
                <a href="#" class="btn btn-primary my-2">Main call to action</a>
                <a href="#" class="btn btn-secondary my-2">Secondary action</a>
            </p>
        </div>
        <div>@Html.PropertyFor(x => x.CurrentPage.Text)</div>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            @Html.PropertyFor(x => x.CurrentPage.ContentArea)

            @foreach (var item in Model.Food)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        @Html.PropertyFor(x => item.Image)
                        <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="placeholder: thumbnail" preserveaspectratio="xmidymid slice" focusable="false"><title></title><rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em"></text></svg>
                        <div class="card-body">
                            <p class="card-text">item.Preamble</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="@Url.ContentUrl(item.ContentLink)" type="button" class="btn btn-sm btn-outline-secondary">Read More</a>
                                    <button type="button" class="btn btn-sm btn-outline-secondary"></button>
                                </div>
                                <small class="text-muted"></small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>