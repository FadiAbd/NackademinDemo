@model MovieSearchViewModel

<h1>Result for a movie</h1>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                
                <div class="col">
                    <div class="card shadow-sm">
                       
                           <img src="@Model.Movie.Poster" />
                        
                        <div class="card-body">
                            <p class="card-text">@Model.Movie.Title</p>

                        </div>
                    </div>
                </div>
                
        </div>
    </div>
</div>